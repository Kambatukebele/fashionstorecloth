{% comment %} Capturing Product url {% endcomment %}
{%- assign captureProductURl = product.url | replace: '/', '-'  -%}
{%- assign ReplaceProductURLAgain = captureProductURl | replace: '-', ' ' -%}
{%- assign productURL = ReplaceProductURLAgain | remove: "products" -%}
{% comment %} {%- for vari in product.options_by_name['color'].values -%}
  {{ vari }}
{%- endfor -%} {% endcomment %}
{% comment %} {{ product.options_by_name | json  }} {% endcomment %}
 {{  product.options }}
<section class="w-full h-fit py-5">
  <div class="container px-4">
    <div class="mb-5">
      <p class="text-xs leading-6 text-gray-500 font-light">
        <span>Home</span> /
        <span>Shop {{ product.category }}</span> /
        <span>{{- productURL -}}</span>
      </p>
    </div>
    <div class="lg:flex lg:flex-row-reverse lg:justify-between">
      <div class="lg:px-4 lg:w-[310px] xl:w-[370px] 2xl:w-[446px]">
        <div class="mb-4">
          <h1 class="text-gray-950 text-3xl leading-8 font-semibold text-ellipsis mb-2">{{- product.title -}}</h1>
          <p class="text-sm leading-6 font-normal text-gray-600 mb-2">
           {{- product.description -}}
          </p>
          <p class="font-normal text-gray-950 text-xl mb-2">
            <span>{{- product.price | money -}}</span>
            {%- if product.compare_at_price -%}
              <span>{{- product.compare_at_price | money -}}</span>
            {%- endif -%}
          </p>
        </div>
        <div class="flex flex-col gap-2 justify-center items-start mb-4">
          <h4 class="font-normal text-sm mb-1">Color: <span class="font-semibold">black</span></h4>
          <div class="flex items-center gap-1.5 flex-wrap">
            <button class="w-[24px] h-[24px] p-[3px] rounded-full bg-no-repeat bg-center bg-cover relative bg-clip-content" type="button" title="Black" aria-label="Black" style="background-color: rgb(0, 0, 0); background-size: 18px 18px;">
              <span class="top-[2px] left-[2px] w-[20px] h-[20px] border-knix_grey_3 active:left-0 active:top-0 active:w-[24px] active:h-[24px] active:border-knix_grey_3 rounded-full absolute border-[1px]">
              </span>
