        },
        {
          "value": "py-2",
          "label": "8px"
        },
        {
          "value": "p-3",
          "label": "12px",
        },
        {
          "value": "py-4",
          "label": "16px"
        },
        {
          "value": "py-5",
          "label": "20px"
        },
        {
          "value": "py-6",
          "label": "28px"
        }
      ],
      "default": "py-1"
    },
    {
      "type": "paragraph",
      "content": "Mobile Top Padding",
    }
  ],
  "blocks": [],
  "presets": [{ "name": "Announcement bar" }]
}
