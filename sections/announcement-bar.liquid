<section class="w-full h-fit {{ section.settings.select_announcement_desktop_id }} bg-red-100">
  <div class="container mx-auto">
    <!-- Left side container-->
    <div class="w-full whitespace-nowrap overflow-hidden">
      <p class="announcement inline-block w-full mx-auto border sm:w-full text-center">
        FREE standard shipping $100+*
      </p>
      <p class="announcement inline-block w-full mx-auto border sm:w-full text-center">
        Mix & Match Save up to 25%
      </p>
      <p class="announcement inline-block w-full mx-auto border sm:w-full text-center">
        Kamba tukebele
      </p>
    </div>
  </div>
</section>
<script src="{{ 'announcement_bar.js' | asset_url }}" defer></script>

